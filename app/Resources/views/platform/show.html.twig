{% extends 'layout/base.html.twig' %}

{% block title %}
    {{ parent() }} - platform
{% endblock %}

{% block body %}

    {#    {{ dump() }}#}

    <div id="top" class="row">
        <div class="col-md-12">
            {{ include('platform/_banner_slide.twig') }}
        </div>
    </div>

    <div id="top" class="row">
        <div class="col-md-12">

            <h3>{{ platform.id }} - {{ platform.name }} ({{ platform.slug }})
                <div class="form-group pull-right">
                    <a title='Show' class="btn btn-default" href="{{ path('game', { 'platform': platform.id, 'filter_action': 'filter' }) }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span> Browse games
                    </a>
                    <a class="btn btn-default" href="{{ path('platform') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Back to list
                    </a>
                    <a class="btn btn-primary" href="{{ path('platform_edit', { 'id':  platform.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit
                    </a>
                    <a class="btn btn-info" href="{{ path('platform_new') }}">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        New
                    </a>
                    <form action="{{ path('platform_delete', { 'id': platform.id }) }}" method="post" style="display: inline-block">
                        <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(delete_form) }}
                        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            Delete
                        </button>
                    </form>
                </div>
            </h3>

        </div>

    </div>

    <hr/>

    <div class="row">
        <div class="col-md-4">

            <div class="row">
                <div class="col-md-12">
                    <p><strong>Boxart</strong></p>
                    {% if platform.Boxart | length == 0 %}
                        <img class="img-responsive" src="{{ asset('images/generique.png') }}" alt="image" />
                    {% else %}
                        <img class="img-responsive" src="/images{{ asset(platform.Boxart.linkThumb) }}" alt="image" />
                    {% endif %}
                </div>
            </div>

        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <p><strong>Overview</strong></p>
                    <p>
                        {{ platform.overview }}
                    </p>
                </div>
                <div class="col-md-6">
                    <p><strong>Type</strong></p>
                    <p>
                        {{ platform.type }}
                    </p>
                </div>
                <div class="col-md-6">
                    <p><strong>Generation</strong></p>
                    <p>
                        {{ platform.generation }}
                    </p>
                </div>
                <div class="col-md-6">
                    <p><strong>Developper(s)</strong></p>
                    <p>
                        {% for dev in platform.developers %}
                            <span class="label label-primary">{{ dev.name }}</span>
                        {% endfor %}
                    </p>
                </div>
                <div class="col-md-6">
                    <p><strong>Manufacturers(s)</strong></p>
                    <p>
                        {% for man in platform.manufacturers %}
                            <span class="label label-primary">{{ man.name }}</span>
                        {% endfor %}
                    </p>
                </div>

                <div class="col-md-6">
                    <p><strong>Cpu</strong></p>
                    <p>
                        {{ platform.cpu }}
                    </p>

                </div>
                <div class="col-md-6">
                    <p><strong>Memory</strong></p>
                    <p>
                        {{ platform.memory }}
                    </p>

                </div>
                <div class="col-md-6">
                    <p><strong>Graphics</strong></p>
                    <p>
                        {{ platform.graphics }}
                    </p>

                </div>
                <div class="col-md-6">
                    <p><strong>Soundinfo</strong></p>
                    <p>
                        {{ platform.soundInfo }}
                    </p>

                </div>
                <div class="col-md-6">
                    <p><strong>Display</strong></p>
                    <p>
                        {{ platform.display }}
                    </p>

                </div>
                <div class="col-md-6">
                    <p><strong>Maxcontrollers</strong></p>
                    <p>
                        {{ platform.maxcontrollers }}
                    </p>

                </div>
            </div>
        </div>
    </div>

    <hr/>

    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    Console
                </div>
                <div class="col-md-12">
                    {% if platform.ConsoleArt | length == 0 %}
                        <img class="img-responsive" src="{{ asset('images/generique.png') }}" alt="image" />
                    {% else %}
                        <img class="img-responsive" src="/images{{ asset(platform.ConsoleArt.linkThumb) }}" alt="image" />
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    Controller
                </div>
                <div class="col-md-12">
                    {% if platform.ControllerArt | length == 0 %}
                        <img class="img-responsive" src="{{ asset('images/generique.png') }}" alt="image" />
                    {% else %}
                        <img class="img-responsive" src="/images{{ asset(platform.ControllerArt.linkThumb) }}" alt="image" />
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <hr/>


    <div id="tabs">
        <ul>
            <li><a href="#tabs-1">Fanarts</a></li>
        </ul>
        <div id="tabs-1">
            {{ include('platform/_fanart_slide.twig') }}
        </div>
    </div>

{% endblock %}

