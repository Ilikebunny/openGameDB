{% extends 'layout/base.html.twig' %}

{% block title %}
{{ parent() }} - platform
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View platform <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ platform.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ platform.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Overview</strong></p>
        <p>
            {{ platform.overview }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Slug</strong></p>
        <p>
            {{ platform.slug }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Cpu</strong></p>
        <p>
            {{ platform.cpu }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Memory</strong></p>
        <p>
            {{ platform.memory }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Graphics</strong></p>
        <p>
            {{ platform.graphics }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Soundinfo</strong></p>
        <p>
            {{ platform.soundInfo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Display</strong></p>
        <p>
            {{ platform.display }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Maxcontrollers</strong></p>
        <p>
            {{ platform.maxcontrollers }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('platform') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('platform_edit', { 'id':  platform.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('platform_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('platform_delete', { 'id': platform.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

