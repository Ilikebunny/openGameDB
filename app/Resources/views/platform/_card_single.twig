<div class="card mb-4">

    <div class="card-header">
        <h5 class="text-center">{{ platform.name }}</h5>

        <div class="d-flex flex-wrap justify-content-center">
            <p class="p-2"><small class="text-muted">{{ platform.type }}</small></p>
            <p class="p-2"><small class="text-muted">{{ platform.generation }}</small></p>
        </div>

        <div class="d-flex flex-wrap justify-content-center">
            <p class="p-2">
                <a title='Show' class="btn btn-primary btn-sm" href="{{ path('platform_show', { 'id': platform.id }) }}">
                    <i class="fa fa-eye"></i> View
                </a>
            </p>

            <p class="p-2">
                <a title='Show' class="btn btn-secondary btn-sm" href="{{ path('game', { 'platform': platform.id, 'filter_action': 'filter' }) }}">
                    <i class="fa fa-folder-open"></i> Browse games 
                </a>
                <span class="badge badge-pill badge-secondary">{{ platform.gameCount }}</span>
            </p>
        </div>
    </div>

    {% if platform.Boxart | length == 0 %}
        <img class="card-img-top img-fluid mx-auto mb-2 d-block" src="{{ asset('images/generique.png') }}" alt="image" />
    {% else %}
        <img class="card-img-top img-fluid mx-auto mb-2 d-block" src="/images{{ asset(platform.Boxart.linkThumb) }}" alt="image" />
    {% endif %}

    {#    BEG Carrousel Variations#}
    {{ include('platform/_carousel_version.twig') }}
    {#    END Carrousel Variations#}

{#    <div class="card-body">

        <p class="text-center">Game(s) : <span class="badge badge-pill badge-secondary">{{ platform.gameCount }}</span></p>

    </div>#}

    <div class="card-footer">
        <div class="d-flex flex-wrap justify-content-center border border-primary mb-2">
            <div class="p-2">
                Boxart :
                {% if platform.Boxart | length == 0 %}
                    <img class="" src="{{ asset('images/cross_16.png') }}" alt="image" />
                {% else %}
                    <img class="" src="{{ asset('images/tick_16.png') }}" alt="image" />
                {% endif %}
            </div>
            <div class="p-2">
                ConsoleArt :
                {% if platform.ConsoleArt | length == 0 %}
                    <img class="" src="{{ asset('images/cross_16.png') }}" alt="image" />
                {% else %}
                    <img class="" src="{{ asset('images/tick_16.png') }}" alt="image" />
                {% endif %}
            </div>
            <div class="p-2">
                ControllerArt :
                {% if platform.ControllerArt | length == 0 %}
                    <img class="" src="{{ asset('images/cross_16.png') }}" alt="image" />
                {% else %}
                    <img class="" src="{{ asset('images/tick_16.png') }}" alt="image" />
                {% endif %}
            </div>
            <div class="p-2">
                Clearlogo :
                {% if platform.Clearlogo | length == 0 %}
                    <img class="" src="{{ asset('images/cross_16.png') }}" alt="image" />
                {% else %}
                    <img class="" src="{{ asset('images/tick_16.png') }}" alt="image" />
                {% endif %}
            </div>
            <div class="p-2">
                Fanart(s) : <span class="badge badge-pill badge-secondary">{{ platform.Fanarts | length }}</span>
            </div>
            <div class="p-2">
                Banner(s) : <span class="badge badge-pill badge-secondary">{{ platform.Banners | length }}</span>
            </div>
        </div>
        {#        <h5 class="card-title">{{ platform.name }}</h5>#}

        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>

</div>    
