<div class="row">

    <div class="col-md-12">
        <div class="page-header">
            <h2><a href="{{ path('gameroot') }}">GameRoot</a></h2>
        </div>
    </div>       

    <!-- FILTERING -->
    <div class="col-md-12">
        <div  id="filters" class="collapse">

            <form class="well" action="{{ path('gameroot') }}" method="get" >
                <div class="row">

                    <div class="col-md-6">{{ form_row(filterForm.id) }}</div>


                    <div class="col-md-6">{{ form_row(filterForm.title) }}</div>


                    <div class="col-md-6">{{ form_row(filterForm.overview) }}</div>

                    <div class="col-md-6">
                        {{ form_rest(filterForm) }}
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning" name="filter_action" value="filter"> <span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Filter</button>
                            <button type="submit" class="btn btn-default" name="filter_action" value="reset"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Reset</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- END FILTERING -->


    <div class="col-md-3 pull-left">

        <!-- PAGE SIZE -->
        <div class="pagination form-inline ">
            <select class = "form-control"  onchange="window.location = this.value" >
                <option value='{{ path('gameroot', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>10</option>
                <option value='{{ path('gameroot', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>20</option>
                <option value='{{ path('gameroot', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 %} selected {% endif %}>50</option>
                <option value='{{ path('gameroot', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>100</option>
                <option value='{{ path('gameroot', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>500</option>
            </select>
        </div>
        <!-- END PAGE SIZE -->

    </div>

    <div class="col-md-6">


    </div>

    <div class="col-md-3">

        <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">
            Filter
            <span class="caret"></span>
        </a>
    </div>








    <div class="col-md-12">
        {% if form_errors(filterForm) %}
            <div class="alert alert-block alert-error fade in form-errors">
                {{ form_errors(filterForm) }}
            </div>
        {% endif %}
    </div>

</div> <!-- /#top -->