{% extends 'layout/base.html.twig' %}

{% block title %}
    {{ parent() }} - game
{% endblock %}

{% block subNav %}
    {{ knp_menu_render('AppBundle:Builder:subGameMenu', {'currentClass': 'active'}) }}
{% endblock %}

{% block body %}

    {#    Banners#}
    <div id="top" class="row">
        <div class="col-md-12">
            {{ include('gameroot/_banner_slide.twig') }}
        </div>
    </div>

    {#Game root section    #}
    <div id="top" class="row">
        <div class="col-md-12">
            <h3>{{ gameRoot.title }}

                <div class="form-group pull-right">
                    <a class="btn btn-default" href="{{ path('game') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Back to list
                    </a>
                    <a class="btn btn-primary" href="{{ path('game_edit', { 'id':  game.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit
                    </a>
                    <a class="btn btn-primary" href="{{ path('game_edit_arts', { 'id':  game.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit Arts
                    </a>
                    <a class="btn btn-info" href="{{ path('game_new') }}">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        New
                    </a>
                    {#           <form action="{{ path('game_delete', { 'id': game.id }) }}" method="post" style="display: inline-block">
                                   <input type="hidden" name="_method" value="DELETE" />
                                   {{ form_widget(delete_form) }}
                                   <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                                       <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                       Delete
                                   </button>
                               </form>#}
                </div>
            </h3>
        </div>
        {#        <div class="col-md-12">
                    <p class="">Id : {{ gameRoot.id }}</p>
                </div>#}
    </div>

    {% if game.alternateTitles | length != 0 %}
        <div class="row">
            <div class="col-md-12">
                <p>
                    <small>
                        A.k.a(s) : 
                        {% for alt in game.alternateTitles %}
                            "{{ alt.title }}"
                        {% endfor %}
                    </small>
                </p>
            </div>
        </div>
    {% endif %}

    <hr>

    <div class="row">
        <div class="col-md-4">
            {#Clearlogo#}
            <div class="row">
                <div class="col-md-12">
                    <p><strong>Clearlogo</strong>
                    </p> 
                </div>
                <div class="col-md-12">
                    {% if gameRoot.Clearlogo | length == 0 %}
                        {#                        <img class="img-responsive boxart" src="{{ asset('images/generique.png') }}" alt="image" />#}
                    {% else %}
                        <img class="img-responsive boxart" src="/images{{ asset(gameRoot.Clearlogo.linkFile) }}" alt="image" />
                    {% endif %}
                </div>
            </div>

        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <p class=""><strong>Id : </strong>{{ gameRoot.id }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p><strong>Overview</strong></p>
            <p>{{ game.overview }}</p>
        </div>
        <div class="col-md-12">
            <p><strong>Genre(s)</strong></p>
            <p></p>
        </div>
        <div class="col-md-12">
            <p><strong>Tag(s)</strong></p>
            <p></p>
        </div>
    </div>
    <hr>

    {#        Games listing#}
    <div class="row">
        <div class="col-md-12">
            {{ include('gameroot/_accordion.twig') }}
        </div>
    </div>

    <hr>

    {#    Game section#}

    <hr/>

    <div class="row">
        <div id="tabs">
            <ul>
                <li><a href="#tabs-1">Fanarts <span class="badge">{{ gameRoot.Fanarts | length }}</span></a></li>
                <li><a href="#tabs-2">Screenshots <span class="badge">{{ game.Screenshots | length }}</span></a></li>
            </ul>
            <div id="tabs-1">
                {{ include('gameroot/_fanart_slide.twig') }}
            </div>
            <div id="tabs-2">
                {{ include('game/_screenshot_slide.twig') }}
            </div>
        </div>
    </div>

{% endblock %}