{% extends 'layout/base.html.twig' %}

{% block title %}
    {{ parent() }} - game
{% endblock %}

{% block subNav %}
    {{ knp_menu_render('AppBundle:Builder:subGameMenu', {'currentClass': 'active'}) }}
{% endblock %}

{% block body %}

    {{ dump() }}

    <div id="top" class="row">
        <div class="col-md-12">
            {{ include('game/_banner_slide.twig') }}
        </div>
    </div>


    <div id="top" class="row">
        <div class="col-md-12">

            <h3>{{ game.id }} - {{ game.title }}
                <div class="form-group pull-right">
                    <a class="btn btn-default" href="{{ path('game') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Back to list
                    </a>
                    <a class="btn btn-primary" href="{{ path('game_edit', { 'id':  game.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit
                    </a>
                    <a class="btn btn-info" href="{{ path('game_new') }}">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        New
                    </a>
                    <form action="{{ path('game_delete', { 'id': game.id }) }}" method="post" style="display: inline-block">
                        <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(delete_form) }}
                        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            Delete
                        </button>
                    </form>
                </div>
            </h3>

        </div>

    </div>

    <hr/>

    <div class="row">
        <div class="col-md-4">

            <div class="row">
                <div class="col-md-12">
                    <p><strong>Boxart</strong></p>
                    {% if game.BoxartFront | length == 0 %}
                        <img class="img-responsive" src="{{ asset('images/generique.png') }}" alt="image" />
                    {% else %}
                        <img class="img-responsive" src="/images{{ asset(game.BoxartFront.linkThumb) }}" alt="image" />
                    {% endif %}
                </div>
            </div>

        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <p><strong>Overview</strong></p>
                    <p>{{ game.overview }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Release date</strong></p>
                    <p>
                        {% if game.releaseDate %}{{ game.releaseDate|date('Y-m-d') }}{% endif %}
                    </p>

                </div>

                <div class="col-md-6">
                    <p><strong>Esrb</strong></p>
                    <p>
                        {{ game.esrb }}
                    </p>

                </div>
                <div class="col-md-6">
                    <p><strong>Players</strong></p>
                    <p>
                        {{ game.players }}
                    </p>

                </div>
                <div class="col-md-6">
                    <p><strong>Coop</strong></p>
                    <p>
                        {% if game.coop %}Yes{% else %}No{% endif %}
                    </p>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div id="tabs">
            <ul>
                <li><a href="#tabs-1">Fanarts</a></li>
                <li><a href="#tabs-2">Screenshots</a></li>
            </ul>
            <div id="tabs-1">
                {{ include('game/_fanart_slide.twig') }}
            </div>
            <div id="tabs-2">
                {{ include('game/_screenshot_slide.twig') }}
            </div>
        </div>
    </div>

{% endblock %}

