{% extends 'layout/base.html.twig' %}

{% block title %}
{{ parent() }} - game
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View game <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ game.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Title</strong></p>
        <p>
            {{ game.title }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Releasedate</strong></p>
        <p>
            {% if game.releaseDate %}{{ game.releaseDate|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Overview</strong></p>
        <p>
            {{ game.overview }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Esrb</strong></p>
        <p>
            {{ game.esrb }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Players</strong></p>
        <p>
            {{ game.players }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Coop</strong></p>
        <p>
            {% if game.coop %}Yes{% else %}No{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('game') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('game_edit', { 'id':  game.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('game_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('game_delete', { 'id': game.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

