{% extends 'layout/base.html.twig' %}

{% block title %}
    {{ parent() }} -  Edit game
{% endblock %}

{% block subNav %}
    {{ knp_menu_render('AppBundle:Builder:subGameMenu', {'currentClass': 'active'}) }}
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>Edit game arts <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
        </div>
    </div>

    <div id="top" class="row">
        <div class="col-md-12">
            <div id="fine-uploader-manual-trigger"></div>
        </div>
    </div>

    <div class="row">
        <div class="row">
            <div class="col-md-12">
                {% for type, flashMessages in app.session.flashbag.all() %} 
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            {{ flashMessage|raw }}
                        </div>
                    {% endfor %} 
                {% endfor %} 
            </div>
        </div>

        <hr/>

        <div class="form-group">
            <a class="btn btn-default" href="{{ path('game') }}">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to list
            </a>
            <a class="btn btn-info" href="{{ path('game_new') }}">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New
            </a>
        </div>

    </div>


{% endblock %}

