{% extends 'layout/base.html.twig' %}

{% block title %}
    {{ parent() }} -  Edit game
{% endblock %}

{% block subNav %}
    {{ knp_menu_render('AppBundle:Builder:subGameMenu', {'currentClass': 'active'}) }}
{% endblock %}

{% block body %}

    <div id="top" class="row">
        <div class="page-header">
            <h2>Edit game root<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
        </div>
    </div>

    {{ form_start(edit_form) }}

    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Submit
        </button>
    </p>
    {{ form_end(edit_form) }}

    <hr/>

</div>


{% endblock %}

