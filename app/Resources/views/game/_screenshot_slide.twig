{% if game.screenshots | length != 0 %}
    <div class="row">

        <div id="slider2" class="flexslider">
            <ul class="slides">
                {% for art in game.screenshots %}
                    <li>
                        <img class="img-responsive" src="/images{{ asset(art.linkFile) }}" alt="image" />
                    </li>
                {% endfor %}                
            </ul>
        </div>

        <div id="carousel2" class="flexslider">
            <ul class="slides">
                {% for art in game.screenshots %}
                    <li>
                        <img class="img-responsive" src="/images{{ asset(art.linkFile) }}" alt="image" />
                    </li>
                {% endfor %}                
            </ul>
        </div>

    </div>
{% endif %}