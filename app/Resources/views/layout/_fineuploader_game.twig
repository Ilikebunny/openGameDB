
<script>
    var manualUploader = new qq.FineUploader({
        element: document.getElementById('fine-uploader-manual-trigger-game-screenshots'),
        template: 'qq-template-manual-trigger',
        request: {
            endpoint: "{{ oneup_uploader_endpoint('screenshots') }}",
            params: {
                idGame: "{{ game.id }}"
            }
        },
        thumbnails: {
            placeholders: {
                waitingPath: '/assets/vendor/fineuploader/placeholders/waiting-generic.png',
                notAvailablePath: '/assets/vendor/fineuploader/placeholders/not_available-generic.png'
            }
        },
        autoUpload: false,
    {#        multiple: false,#}
            debug: true
        });

        qq(document.getElementById("trigger-upload")).attach("click", function () {
            manualUploader.uploadStoredFiles();
        });

